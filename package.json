{
  "name": "frontend-webapp-boilerplate",
  "private": true,
  "version": "1.0.0",
  "description": "boilerplate",
  "engines": {
    "node": "^8.2.0",
    "npm": "^5.3.0"
  },
  "config": {
    "build": "_build",
    "markup": "src/markup",
    "styles": "src/assets/styles",
    "development": "development",
    "production": "production",
    "shared": "helpers/sharedConfig.js",
    "pugData": "src/markup/_data"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=$npm_package_config_development npm-run-all dev:*",
    "production": "cross-env NODE_ENV=$npm_package_config_production npm-run-all production:*",
    "mkdir": "node ./helpers/mkdir.js",
    "dev:pug": "pug $npm_package_config_markup/*.pug --out $npm_package_config_build --pretty --obj $npm_package_config_pugData/data.json",
    "dev:sass": "node-sass $npm_package_config_styles/*.scss --output $npm_package_config_build/assets/styles/ --source-map-contents true --output-style expanded --source-comments true",
    "dev:watch-pug": "nodemon -e pug -x \"npm run dev:pug\"",
    "dev:watch-sass": "nodemon -e scss -x \"npm run dev:sass\"",
    "production:pug": "pug --out $npm_package_config_production --basedir $npm_package_config_markup $npm_package_config_markup --pretty --obj $npm_package_config_pugData/data.json",
    "production:sass": "node-sass $npm_package_config_styles/*.scss --output $npm_package_config_production/assets/styles/ --source-map-contents false --output-style compressed --source-comments false",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TaikiShiraishi/frontend-webapp-boilerplate.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/TaikiShiraishi/frontend-webapp-boilerplate/issues"
  },
  "homepage": "https://github.com/TaikiShiraishi/frontend-webapp-boilerplate#readme",
  "devDependencies": {
    "cpx": "^1.5.0",
    "cross-env": "^5.0.5",
    "fs-extra": "^4.0.1",
    "lodash": "^4.17.4",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "path": "^0.12.7",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "touch": "^3.1.0"
  },
  "dependencies": {}
}
