{
  "name": "frontend_boilerplate",
  "private": true,
  "version": "1.0.0",
  "description": "frontend-webapp-boilerplate",
  "engines": {
    "node": "^8.2.0",
    "npm": "^5.3.0"
  },
  "config": {
    "build": "_dist",
    "markup": "src/markup",
    "styles": "src/assets/stylesheets",
    "media": "src/assets/images",
    "development": "development",
    "production": "production",
    "pugData": "src/markup/_data"
  },
  "scripts": {
    "start": "npm-run-all clean copy dev",
    "release": "npm-run-all clean production",
    "mkdir": "node ./helpers/mkdir.js",
    "dev": "cross-env NODE_ENV=$npm_package_config_development npm-run-all --parallel dev:* server",
    "dev:template": "npm-run-all pug watch-pug",
    "dev:style": "npm-run-all stylecompile watch-sass",
    "dev:javascript": "webpack --config webpack.config.js -d --progress --watch --display-error-details",
    "dev:svgsprite": "npm-run-all svgsprite watch-svg",
    "production": "cross-env NODE_ENV=$npm_package_config_production npm-run-all production:*",
    "production:template": "npm-run-all pug",
    "production:style": "npm-run-all nodesass:production postcss",
    "production:javascript": "webpack --config webpack.config.js -p --progress",
    "pug": "pug $npm_package_config_markup/*.pug --out $npm_package_config_build --pretty --obj $npm_package_config_pugData/data.json",
    "postcss": "postcss $npm_package_config_build/assets/stylesheets/**/*.css --config postcss.config.js --dir $npm_package_config_build/assets/stylesheets/",
    "nodesass:dev": "node-sass --source-map-contents true --output-style expanded --source-comments true $npm_package_config_styles/main.scss $npm_package_config_build/assets/stylesheets/main.css",
    "nodesass:production": "node-sass $npm_package_config_styles/*.scss --output $npm_package_config_build/assets/stylesheets/ --source-map-contents false --output-style compressed --source-comments false",
    "stylecompile": "npm-run-all nodesass:dev postcss",
    "watch-pug": "nodemon -e pug -x \"npm run pug\"",
    "watch-sass": "nodemon -e scss -x \"npm run stylecompile\"",
    "watch-svg": "nodemon --ignore $npm_package_config_build -e svg -x \"npm run svgsprite\"",
    "dev:watch-images": "nodemon --ignore $npm_package_config_build --ignore $npm_package_config_meida/_symbol -e png,jpg,gif,svg,ico -x \"npm run copy\"",
    "server": "browser-sync start --server $npm_package_config_build --files $npm_package_config_build --port 8000 --open external --reload-delay 200 --no-ghost-mode false",
    "clean": "rimraf $npm_package_config_build",
    "copy": "cpx \"src/assets/**/*.{png,jpg,gif,svg,ico}\" $npm_package_config_build/assets",
    "svgsprite": "svg-sprite --config svgsprite.config.json --shape-transform-svgo svgo.config.json $npm_package_config_media/_symbol/*svg",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TaikiShiraishi/frontend-webapp-boilerplate.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/TaikiShiraishi/frontend-webapp-boilerplate/issues"
  },
  "homepage": "https://github.com/TaikiShiraishi/frontend-webapp-boilerplate#readme",
  "devDependencies": {
    "autoprefixer": "^8.6.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.18.13",
    "cpx": "^1.5.0",
    "cross-env": "^5.0.5",
    "css-mqpacker": "^6.0.1",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.6.0",
    "fs-extra": "^6.0.1",
    "json-loader": "^0.5.7",
    "lodash": "^4.17.4",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "path": "^0.12.7",
    "postcss-cli": "^5.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "strip-loader": "^0.1.2",
    "svg-sprite": "^1.3.7",
    "touch": "^3.1.0",
    "uglify-save-license": "^0.4.1",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.11.1",
    "webpack-cli": "^3.0.3"
  },
  "dependencies": {
    "keycode": "2.2.0"
  }
}
