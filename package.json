{
  "name": "frontend-webapp-boilerplate",
  "private": true,
  "version": "1.0.0",
  "description": "boilerplate",
  "engines": {
    "node": "^8.2.0",
    "npm": "^5.3.0"
  },
  "config": {
    "build": "_build",
    "markup": "src/markup",
    "styles": "src/assets/styles",
    "media": "src/assets/media",
    "development": "development",
    "production": "production",
    "shared": "helpers/sharedConfig.js",
    "pugData": "src/markup/_data"
  },
  "scripts": {
    "start": "npm-run-all clean copy dev",
    "release": "npm-run-all clean production",
    "mkdir": "node ./helpers/mkdir.js",
    "dev": "cross-env NODE_ENV=$npm_package_config_development npm-run-all --parallel dev:* server",
    "dev:pug": "pug $npm_package_config_markup/*.pug --out $npm_package_config_build --pretty --obj $npm_package_config_pugData/data.json",
    "dev:style": "npm-run-all nodesass:dev postcss",
    "dev:script": "webpack --config webpack.config.js -d --progress --watch --display-error-details",
    "dev:watch-pug": "nodemon -e pug -x \"npm run dev:pug\"",
    "dev:watch-sass": "nodemon -e scss -x \"npm run dev:style\"",
    "production": "cross-env NODE_ENV=$npm_package_config_production npm-run-all production:*",
    "production:pug": "pug --out $npm_package_config_build --basedir $npm_package_config_markup $npm_package_config_markup --pretty --obj $npm_package_config_pugData/data.json",
    "production:style": "npm-run-all nodesass:production postcss",
    "production:script": "webpack --config webpack.config.js -p --progress",
    "postcss": "postcss $npm_package_config_build/assets/styles/**/*.css --config postcss.config.js --dir $npm_package_config_build/assets/styles/",
    "nodesass:dev": "node-sass $npm_package_config_styles/*.scss --output $npm_package_config_build/assets/styles/ --source-map-contents true --output-style expanded --source-comments true",
    "nodesass:production": "node-sass $npm_package_config_styles/*.scss --output $npm_package_config_build/assets/styles/ --source-map-contents false --output-style compressed --source-comments false",
    "server": "browser-sync start --server $npm_package_config_build --files $npm_package_config_build --port 8000",
    "clean": "rimraf $npm_package_config_build",
    "copy": "cpx \"src/assets/**/*.{png,jpg,gif,svg,ico}\" $npm_package_config_build/assets",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TaikiShiraishi/frontend-webapp-boilerplate.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/TaikiShiraishi/frontend-webapp-boilerplate/issues"
  },
  "homepage": "https://github.com/TaikiShiraishi/frontend-webapp-boilerplate#readme",
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "browser-sync": "^2.18.13",
    "cpx": "^1.5.0",
    "cross-env": "^5.0.5",
    "css-mqpacker": "^6.0.1",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "fs-extra": "^4.0.1",
    "json-loader": "^0.5.7",
    "lodash": "^4.17.4",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "path": "^0.12.7",
    "postcss-cli": "^4.1.0",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "strip-loader": "^0.1.2",
    "touch": "^3.1.0",
    "uglify-save-license": "^0.4.1",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^3.5.4"
  },
  "dependencies": {}
}
